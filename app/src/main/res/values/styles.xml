<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_color">@color/colorPrimary</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#090909</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="windowActionBar">false</item>
        <item name="backgroundTint">#303030</item>
        <item name="backgroundForHeader">#303030</item>
        <item name="backgroundTintForFabPresent">#303030</item>
        <item name="backgroundTintForFab">#303030</item>
        <item name="backgroundTintForFabAbsent">#303030</item>
        <item name="backgroundColor">#303030</item>
        <item name="cardBackground">#424242</item>
        <item name="textColor">#319C45</item>
        <item name="tintColor">#1976d2</item>
        <item name="buttonColor">#004ba0</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="navigationItemTintColor">#FFC107</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="MaterialDialog.PositiveButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.MaterialDialog" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="MaterialDialog">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>
